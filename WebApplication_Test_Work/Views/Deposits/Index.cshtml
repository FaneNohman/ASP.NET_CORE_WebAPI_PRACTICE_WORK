@model IEnumerable<WebApplication_Test_Work.Models.Deposit>

@{
    ViewData["Title"] = "Deposits";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FromAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SumUSD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FromAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumUSD)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepositId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.DepositId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
